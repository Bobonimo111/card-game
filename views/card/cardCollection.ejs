<%- include("../partials/top_config.ejs") %>
<%- include("../partials/navBar.ejs") %>

<div class="container d-flex flex-row flex-wrap gap-3 justify-content-center" >
<% cards.forEach(card => { %> 
        <div id="card" class="card">
            <img id="image" src="/uploads/<%= card.image %>"/>
            <div class="card-body position-relative">
                <div id="name-type">
                    <h5  class="card-title"> <%= card.name %></h5>
                    <h6  class="card-subtitle mb-2 text-body-secondary"> <%= card.type %></h6>
                </div>
                
                <div id="card-description"> <%= card.description %></div>
            </div>
            <div id="card-footer" class="card-footer d-flex justify-content-between">
                <div id="attack">
                    <img src="/icon/icons8-crossed-swords-50.png" alt=""> 
                    <div><%=card.attack%></div></div>
                <div id="defense">
                    <img src="/icon/icons8-shield-64.png" alt=""> 
                    <div><%= card.defense %></div>
                </div>
            </div>
        </div>
<% }) %>
</div> 
<%- include("../partials/bottom_config.ejs") %>
<style>
    #card{
        height: 400px;
        width: 250px;
        border:none;
        border: 2px solid black;
        border-radius: 8px;
    }
    #image{
        height: 200px;     
        object-fit: cover;  
        border-radius: 4px;
        border: 1px solid black;
    }
    #card-footer{
        background-color: white;
        border: none;
    }
    #card-footer img{
        height: 20px;
        
    }
    #card-footer>div{
        display: flex;
        align-items: center;
    }
    #card-description{
        background-color: beige;
        height: 120px;
        border: 1px solid black;
        border-radius: 4px;
        padding: 5px;
        overflow-y: auto;
    }

    #name-type{
        position: absolute;
        top:-70px;
        height: 70px;
        left: 0;
        padding: 0 15px;
        border-radius: 4px ;
        background-color: rgba(255, 255, 255, 0.5);
        
    }
</style>